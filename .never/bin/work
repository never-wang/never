#!/bin/bash
#########################################################################
# Author: Wang Wencan
# Created Time: Mon 11 Nov 2013 07:36:10 PM CST
# File Name: work.sh
# Description: start or attach a work session
#########################################################################

SESSION_NAME=WORK
tmux has-session -t $SESSION_NAME &> /dev/null

if [ $? -eq 1 ]; then
    #not exist
    tmux new-session -s $SESSION_NAME
else
    tmux attach-session -t $SESSION_NAME
fi
