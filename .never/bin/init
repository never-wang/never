#!/bin/bash
#########################################################################
# Author: Wang Wencan
# File Name: init.sh
# Description: 
#########################################################################

DIR=`dirname $0`
BIN_PATH=`readlink -m $PWD/$DIR`

LIBEXEC_PATH=`readlink -m $BIN_PATH/../libexec`
ETC_PATH=`readlink -m $BIN_PATH/../etc`
ROOT_PATH=`readlink -m $BIN_PATH/../../`
HOME_PATH=`readlink -m ~`

source $LIBEXEC_PATH/sh-libs

_debian_install()
{
    _execute "sudo apt-get update"

    packages=`cat $ETC_PATH/apt-get.list | grep -v "#"`

    _execute "sudo apt-get install -y $packages"
}

#_debian_install
find . -maxdepth 1 -not -regex '\.' -exec mv -t $HOME_PATH {} \;

